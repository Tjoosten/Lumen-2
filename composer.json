{
    "name": "laravel/lumen",
    "description": "The Laravel Lumen Framework.",
    "keywords": ["framework", "laravel", "lumen"],
    "license": "MIT",
    "type": "project",
    "require": {
        "laravel/lumen-framework": "5.0.2",
        "vlucas/phpdotenv": "~1.0",
        "league/fractal": "0.12.*"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "classmap": [
            "database/"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "scripts": {
      "post-create-project-cmd": [
       "php -r \"copy('.env.example', '.env');\""
     ]
   },
    "config": {
        "preferred-install": "dist"
    }
}
